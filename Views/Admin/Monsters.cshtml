@model IEnumerable<WebApplication1.Models.Monster>
@{
    ViewData["Title"] = "Monsters Management";
}

<div class="container mt-4">
    <h2>Monsters</h2>
    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary mb-3">‚Üê Back</a>
    <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#monsterModal" onclick="openCreateModal()">+ Add Monster</button>
    
    <table class="table table-striped table-bordered" id="monstersTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Reward XP</th>
                <th>Reward Qty</th>
                <th>Reward Item</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var monster in Model)
            {
                <tr>
                    <td>@monster.Id</td>
                    <td>@monster.Name</td>
                    <td>@monster.RewardXp</td>
                    <td>@monster.RewardQuantity</td>
                    <td>@monster.RewardItem?.Name</td>
                    <td>
                        <button class="btn btn-sm btn-warning" onclick='openEditModal(@Html.Raw(Json.Serialize(new { 
                            id = monster.Id, 
                            name = monster.Name, 
                            rewardXp = monster.RewardXp, 
                            rewardQuantity = monster.RewardQuantity, 
                            rewardItemId = monster.RewardItemId 
                        })))'>Edit</button>
                        <button class="btn btn-sm btn-danger" onclick="deleteItem('/api/Monster/@monster.Id')">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="monsterModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="modalTitle">Add Monster</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="monsterForm">
                    <input type="hidden" id="monsterId">
                    <div class="mb-3">
                        <label>Name</label>
                        <input type="text" class="form-control" id="name" required>
                    </div>
                    <div class="mb-3">
                        <label>Reward XP</label>
                        <input type="number" class="form-control" id="rewardXp" required>
                    </div>
                    <div class="mb-3">
                        <label>Reward Quantity</label>
                        <input type="number" class="form-control" id="rewardQuantity" required>
                    </div>
                    <div class="mb-3">
                        <label>Reward Item ID</label>
                        <input type="text" class="form-control" id="rewardItemId" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveMonster()">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() { $('#monstersTable').DataTable(); });
        let isEditMode = false;

        function openCreateModal() {
            isEditMode = false;
            document.getElementById('modalTitle').textContent = 'Add Monster';
            document.getElementById('monsterForm').reset();
        }

        function openEditModal(monster) {
            isEditMode = true;
            document.getElementById('modalTitle').textContent = 'Edit Monster';
            document.getElementById('monsterId').value = monster.id;
            document.getElementById('name').value = monster.name;
            document.getElementById('rewardXp').value = monster.rewardXp;
            document.getElementById('rewardQuantity').value = monster.rewardQuantity;
            document.getElementById('rewardItemId').value = monster.rewardItemId;
            new bootstrap.Modal(document.getElementById('monsterModal')).show();
        }

        function saveMonster() {
            const id = document.getElementById('monsterId').value;
            const data = {
                id: id || undefined,
                name: document.getElementById('name').value,
                rewardXp: parseInt(document.getElementById('rewardXp').value),
                rewardQuantity: parseInt(document.getElementById('rewardQuantity').value),
                rewardItemId: document.getElementById('rewardItemId').value
            };

            const url = isEditMode ? `/api/Monster/${id}` : '/api/Monster';
            fetch(url, {
                method: isEditMode ? 'PUT' : 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            }).then(res => res.ok ? location.reload() : alert('Error'));
        }

        function deleteItem(url) {
            if (confirm('Delete?')) fetch(url, { method: 'DELETE' }).then(res => res.ok ? location.reload() : alert('Error'));
        }
    </script>
}