@model IEnumerable<WebApplication1.Models.Shop>
@{
    ViewData["Title"] = "Shop Management";
}

<div class="container mt-4">
    <h2>Shop</h2>
    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary mb-3">← Back</a>
    <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#shopModal" onclick="openCreateModal()">+ Add Shop Item</button>
    
    <table class="table table-striped table-bordered" id="shopTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Item</th>
                <th>Price XP</th>
                <th>Vehicle</th>
                <th>Modes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var shop in Model)
            {
                <tr>
                    <td>@shop.Id</td>
                    <td>@shop.Item?.Name</td>
                    <td>@shop.PriceXp</td>
                    <td>@(shop.IsVehicle ? "✓" : "")</td>
                    <td>@shop.AllowedModes</td>
                    <td>
                        <button class="btn btn-sm btn-warning" onclick='openEditModal(@Html.Raw(Json.Serialize(new { 
                            id = shop.Id, 
                            itemId = shop.ItemId, 
                            priceXp = shop.PriceXp, 
                            allowedModes = shop.AllowedModes, 
                            isVehicle = shop.IsVehicle 
                        })))'>Edit</button>
                        <button class="btn btn-sm btn-danger" onclick="deleteItem('/api/Shop/@shop.Id')">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="shopModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="modalTitle">Add Shop Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="shopForm">
                    <input type="hidden" id="shopId">
                    <div class="mb-3">
                        <label>Item ID</label>
                        <input type="text" class="form-control" id="itemId" required>
                    </div>
                    <div class="mb-3">
                        <label>Price XP</label>
                        <input type="number" class="form-control" id="priceXp" required>
                    </div>
                    <div class="mb-3">
                        <label>Allowed Modes</label>
                        <input type="text" class="form-control" id="allowedModes" placeholder="Survival,Creative">
                    </div>
                    <div class="mb-3">
                        <input type="checkbox" id="isVehicle">
                        <label>Is Vehicle</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveShop()">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() { $('#shopTable').DataTable(); });
        let isEditMode = false;

        function openCreateModal() {
            isEditMode = false;
            document.getElementById('modalTitle').textContent = 'Add Shop Item';
            document.getElementById('shopForm').reset();
        }

        function openEditModal(shop) {
            isEditMode = true;
            document.getElementById('modalTitle').textContent = 'Edit Shop Item';
            document.getElementById('shopId').value = shop.id;
            document.getElementById('itemId').value = shop.itemId;
            document.getElementById('priceXp').value = shop.priceXp;
            document.getElementById('allowedModes').value = shop.allowedModes;
            document.getElementById('isVehicle').checked = shop.isVehicle;
            new bootstrap.Modal(document.getElementById('shopModal')).show();
        }

        function saveShop() {
            const id = document.getElementById('shopId').value;
            const data = {
                id: id || undefined,
                itemId: document.getElementById('itemId').value,
                priceXp: parseInt(document.getElementById('priceXp').value),
                allowedModes: document.getElementById('allowedModes').value,
                isVehicle: document.getElementById('isVehicle').checked
            };

            const url = isEditMode ? `/api/Shop/${id}` : '/api/Shop';
            fetch(url, {
                method: isEditMode ? 'PUT' : 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            }).then(res => res.ok ? location.reload() : alert('Error'));
        }

        function deleteItem(url) {
            if (confirm('Delete?')) fetch(url, { method: 'DELETE' }).then(res => res.ok ? location.reload() : alert('Error'));
        }
    </script>
}