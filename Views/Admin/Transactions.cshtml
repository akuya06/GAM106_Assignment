@model IEnumerable<WebApplication1.Models.ShopTransaction>
@{
    ViewData["Title"] = "Transactions History";
}

<div class="container mt-4">
    <h2>Shop Transactions</h2>
    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary mb-3">‚Üê Back to Dashboard</a>
    
    <table class="table table-striped table-bordered" id="transactionsTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Player</th>
                <th>Shop Item</th>
                <th>Price Paid</th>
                <th>Purchased At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trans in Model)
            {
                <tr>
                    <td>@trans.Id</td>
                    <td>@trans.Player?.Account?.Username</td>
                    <td>@trans.Shop?.Item?.Name</td>
                    <td>@trans.PricePaid XP</td>
                    <td>@trans.PurchasedAt.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#transactionsTable').DataTable();
        });
    </script>
}